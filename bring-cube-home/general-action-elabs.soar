sp {apply*operator*create-action-command
   (state <s> ^operator <o>
              ^io.output-link <out>
             -^io.output-link.<old-act>.status running)
   (<o> ^actions <act>)
   (<act> ^<att> <value>)
   # (<value> ^<att2> <value2>)
-->
   # want copy of pointer to structure instead of values
   # (<out> ^<att> <value3>)
   # (<value3> ^<att2> <value2>)
   (<out> ^<att> <value>)
}

sp {apply*operator*remove-command
   (state <s> ^operator.actions
              ^io.output-link <out>)
   (<out> ^<att> <value>)
   (<value> ^status complete)
-->
   (write (crlf) | REMOVE OPERATOR: | <att>)
   (<out> ^<att> <value> -)
   }

sp {elaborate*state*io
   (state <s> ^superstate.io <io>)
-->
   (<s> ^io <io>)}

sp {elaborate*state*name
   (state <s> ^superstate.operator.name <name>)
-->
   (<s> ^name <name>)}
   